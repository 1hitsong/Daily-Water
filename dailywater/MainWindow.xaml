<Window x:Class="dailywater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        Title="Daily Water" Height="350" Width="200">
    <Border
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        BorderBrush="Yellow"
        BorderThickness="3"
        CornerRadius="10"
        Padding="2"
    >
        <Grid>
            <Border Name="mask" Background="White" CornerRadius="10"/>
            <StackPanel>
                <!-- Use a VisualBrush of 'mask' as the opacity mask -->
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=mask}"/>
                </StackPanel.OpacityMask>

                <Button Content="Drink 20oz" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="75" Click="Button_Drink"/>
                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="X" Width="20" Height="20" Margin="168,10,0,318" HorizontalAlignment="Left" Click="Button_Close" />
                <Rectangle Name="completionGraph" Fill="LightBlue" HorizontalAlignment="Center" Height="300" Margin="0,-30,0,0" VerticalAlignment="Top" Width="213"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
