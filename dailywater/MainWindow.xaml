<Window x:Class="dailywater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        Title="Daily Water" Height="350" Width="200">
    <Grid>
        <Border Name="mask" Height="350" Width="200" Background="White" CornerRadius="20"/>
        <Canvas ClipToBounds="True" Name="canvas" HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="200" Margin="0,0,0,0">
            <Canvas.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=mask}" />
            </Canvas.OpacityMask>
        </Canvas>
        <Button Content="Drink 20oz" HorizontalAlignment="Center" Margin="0,-40,0,0" VerticalAlignment="Bottom" Width="75" Click="Button_Drink"/>
        <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="X" Width="20" Height="20" Margin="168,10,0,318" HorizontalAlignment="Left" Click="Button_Close" />
    </Grid>
</Window>
